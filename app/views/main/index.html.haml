- @releases.each do |release|
  %h1
    = release.name
    - if release.accepted_at
      %span DONE
  %h2
    - if release.deadline
      = "Due #{release.deadline.to_s(:default)} &mdash; ".html_safe
    - if release.accepted_at  
      = "Accepted #{release.accepted_at}".html_safe
    - else
      = "Estimated #{release.estimated_finish}".html_safe
  = RedCloth.new(release.description).to_html.html_safe
