%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
  %title= "#{ENV["PRODUCT_NAME"] || "Product"} Roadmap"
  %head
    = csrf_meta_tag
    = javascript_include_tag :defaults
    = stylesheet_link_tag "screen.css", :media => "screen, projection"
    = stylesheet_link_tag "print.css", :media => "print"
    /[if IE]
      = stylesheet_link_tag "ie.css", :media => "screen, projection"
  %body
    #header
      #options
        - if params[:all]
          = link_to "Upcoming", :all => nil
          All
        - else
          Upcoming
          = link_to "All", :all => "true"
      %h1
        = "#{ENV["PRODUCT_NAME"] || "Product"} Roadmap"
        %span{:class => 'small'}= link_to "Home", :root
        %span{:class => 'small'}= link_to "Workstreams", :workstream
    #content
      = yield
    #footer= (ENV["FOOTER"] || "Confidential").html_safe